{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "emt/section-block",
	"version": "1.0",
	"title": "EMT Section",
	"category": "widgets",
	"icon": "smiley",
	"description": "A section block",
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true,
			"link": true
		},
		"align": ["full"]
	},
	"textdomain": "emt-section-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"attributes": {
		"align": {
			"type": "string",
			"default": "full"
		},
		"padding": {
			"type": "number",
			"default": 2
		},
		"backgroundImage": {
			"type": "object",
			"default": null
		},
		"backgroundPosition": {
			"type": "string",
			"default": "center center"
		},
		"backgroundSize": {
			"type": "string",
			"default": "cover"
		}
	}
}
